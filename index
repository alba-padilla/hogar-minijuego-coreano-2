    }

    #loginArea, #gameArea {
      position: absolute;
      width: 80%;
      max-width: 600px;
      max-height: 90vh;
      background: white;
      border: 2px solid #000;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
      padding: 10px;
      text-align: center;
      display: none;
      flex-direction: column;
    }

    #loginArea.active, #gameArea.active {
      display: flex;
    }

    #score {
      font-size: 18px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 10px;
    }

    #word {
      font-size: 24px;
      margin-bottom: 20px;
    }

    button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #correctButton {
      background-color: #4caf50;
      color: white;
    }

    #incorrectButton {
      background-color: #f44336;
      color: white;
    }
